    "@fontsource/roboto": "^5.2.9",
    "@schedule-x/calendar": "^1.63.1",
    "@schedule-x/svelte": "^3.0.0",
    "@schedule-x/theme-default": "^1.63.1",
    "@tiptap/core": "^3.19.0",
    "@tiptap/extension-color": "^3.19.0",
    "@tiptap/extension-font-family": "^3.19.0",
    "@tiptap/extension-highlight": "^3.19.0",
    "@tiptap/extension-image": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-table": "^3.19.0",
    "@tiptap/extension-table-cell": "^3.19.0",
    "@tiptap/extension-table-header": "^3.19.0",
    "@tiptap/extension-table-row": "^3.19.0",
    "@tiptap/extension-text-align": "^3.19.0",
    "@tiptap/extension-text-style": "^3.19.0",
    "@tiptap/extension-underline": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "bits-ui": "^2.15.5",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dexie": "^4.3.0",
    "dompurify": "^3.3.1",
    "emoji-picker-element": "^1.29.0",
    "flexsearch": "^0.8.212",
    "hotkeys-js": "4.0.0-beta.7",
    "ky": "^1.14.3",
    "marked": "^12.0.2",
    "openpgp": "^6.3.0",
    "postal-mime": "^2.7.3",
    "preact": "^10.28.3",
    "svelte": "^5.50.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@iconify-json/lucide": "^1.2.90",
    "@internationalized/date": "^3.11.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/postcss": "^4.1.18",
    "@tsconfig/svelte": "^5.0.7",
    "@types/node": "^20.19.33",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-perfectionist": "^5.5.0",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "mode-watcher": "^1.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "svelte-check": "^4.3.6",
    "svelte-eslint-parser": "^1.4.1",
    "svelte-sonner": "^1.0.7",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "unplugin-auto-import": "^21.0.0",
    "unplugin-icons": "^23.0.1",
    "vite": "^7.3.1",
